@model IEnumerable<webFood.Models.Manufacturer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Производители</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Manufacturer" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Создать
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Название</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var manufacturer in Model)
                {
                            <tr>
                                <td width="10%">@manufacturer.Id</td>
                                <td width="50%">@manufacturer.Name</td>
                                <td class="text-center">
                                    <div class="w-100 btn-group" role="group">
                                        <!-- Кнопка "Редактировать" -->
                                        <a asp-controller="Manufacturer" asp-route-Id="@manufacturer.Id" asp-action="Edit" class="btn btn-primary mx-2" style="min-width: 100px;">
                                            <i class="fas fa-edit"></i> Редактировать
                                        </a>
                                        <!-- Кнопка "Удалить" -->
                                        <a asp-controller="Manufacturer" asp-route-Id="@manufacturer.Id" asp-action="Delete" class="btn btn-danger mx-2" style="min-width: 100px;">
                                            <i class="far fa-trash-alt"></i> Удалить
                                        </a>
                                    </div>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <p> Нет действующих производителей </p>
    }
</div>